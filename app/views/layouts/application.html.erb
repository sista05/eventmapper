            <li><%= link_to 'サインアップ', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
      </div>
  </nav>
</header>

<%= yield %>

<footer>
  <p>運営会社トリックマーケット</p>
  <p>(c) 2017 Copyright Trick Market.</p>
</footer>


</body>
</html>
