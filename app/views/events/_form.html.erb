<%= form_for(@event, url: choose_new_or_edit) do |f| %>
<% if @event.errors.any? %>
<div id="error_expanation">
    <h3><%= @event.errors.count %>件のエラーがあります</h3>

    <ul>
        <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= f.label :タイトル %>
<%= f.text_field :title, class: 'form-control' %>
<br>
<%= f.label :内容 %>
<%= f.text_field :content, class: 'form-control'%>
<br>
<%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "ブログ一覧画面に戻る", events_path %>
